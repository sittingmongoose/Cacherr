# Cacherr - Environment Configuration for Unraid
# =============================================================================
# PLEX CONFIGURATION (REQUIRED)
# =============================================================================
PLEX_URL=http://192.168.50.223:32401
PLEX_TOKEN=your-plex-token-here

# =============================================================================
# PATH CONFIGURATION (CRITICAL FOR UNRAID)
# =============================================================================
PLEX_SOURCE=/media
REAL_SOURCE=/media
CACHE_DESTINATION=/cache
CONFIG_DIR=/config

# Additional source mappings (OPTIONAL)
# IMPORTANT: These must be valid JSON arrays or empty strings
ADDITIONAL_SOURCES=["/Nas1"]
ADDITIONAL_PLEX_SOURCES=["/Nas1"]

# =============================================================================
# MEDIA SETTINGS
# =============================================================================
NUMBER_EPISODES=5
DAYS_TO_MONITOR=99

# Watchlist settings
WATCHLIST_TOGGLE=true
WATCHLIST_EPISODES=1
WATCHLIST_CACHE_EXPIRY=6

# Watched content settings
WATCHED_MOVE=true
WATCHED_CACHE_EXPIRY=48

# User settings
USERS_TOGGLE=true
EXIT_IF_ACTIVE_SESSION=false

# =============================================================================
# CACHE BEHAVIOR SETTINGS
# =============================================================================
COPY_TO_CACHE=true
DELETE_FROM_CACHE_WHEN_DONE=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_CONCURRENT_MOVES_CACHE=3
MAX_CONCURRENT_MOVES_ARRAY=1
MAX_CONCURRENT_LOCAL_TRANSFERS=3
MAX_CONCURRENT_NETWORK_TRANSFERS=1

# =============================================================================
# REAL-TIME WATCHING SETTINGS
# =============================================================================
REAL_TIME_WATCH_ENABLED=false
REAL_TIME_WATCH_CHECK_INTERVAL=30
REAL_TIME_WATCH_AUTO_CACHE_ON_WATCH=true
REAL_TIME_WATCH_CACHE_ON_COMPLETE=true
REAL_TIME_WATCH_RESPECT_EXISTING_RULES=true
REAL_TIME_WATCH_MAX_CONCURRENT_WATCHES=5
REAL_TIME_WATCH_REMOVE_FROM_CACHE_AFTER_HOURS=24
REAL_TIME_WATCH_RESPECT_OTHER_USERS_WATCHLISTS=true
REAL_TIME_WATCH_EXCLUDE_INACTIVE_USERS_DAYS=30

# =============================================================================
# TRAKT.TV INTEGRATION (OPTIONAL)
# =============================================================================
TRAKT_ENABLED=false
TRAKT_CLIENT_ID=
TRAKT_CLIENT_SECRET=
TRAKT_TRENDING_MOVIES_COUNT=10
TRAKT_CHECK_INTERVAL=3600

# =============================================================================
# TEST MODE SETTINGS
# =============================================================================
TEST_MODE=false
TEST_SHOW_FILE_SIZES=true
TEST_SHOW_TOTAL_SIZE=true

# =============================================================================
# WEB INTERFACE SETTINGS
# =============================================================================
WEB_HOST=0.0.0.0
PORT=5445
WEB_PORT=5445
DEBUG=false
LOG_LEVEL=INFO
ENABLE_SCHEDULER=false

# =============================================================================
# NOTIFICATIONS
# =============================================================================
WEBHOOK_URL=
NOTIFICATION_TYPE=webhook

# =============================================================================
# CONTAINER CONFIGURATION
# =============================================================================
TZ=America/New_York
